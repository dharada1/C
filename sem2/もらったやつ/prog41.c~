#include <stdio.h>
#include <string.h>
#include <stdlib.h>

double sin(double a){ return sin(a); }
double cos(double a){ return cos(a); }
double tan(double a){ return tan(a); }
int other(double a){ return   0; }

int main( void )
{
  double (*pfunc[])(int, int) = {sin, cos, tan,  other};
  double pa, idx_f;
  char* opt[] = {"0.sin", "1.cos", "2. tan", "3. other"};

  while(printf("\n%s\n%s\n%s\n%s\nEnter the operation ID and values>  ",opt[0],opt[1],opt[2],opt[3]),
	(scanf("%d %d", &idx_f, &pa) )  != EOF )
{
  if( idx_f > 3 || idx_f < 0 ) idx_f = 3;
  printf("\n[ANSWER] %s(%d,%d) = %d\n", opt[idx_f], pa, pfunc[idx_f](pa));
 }

  putchar('\n');
  return 0;
}
